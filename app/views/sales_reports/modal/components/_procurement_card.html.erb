<!-- 仕入れコスト情報 -->
<div class="card bg-base-100 border border-base-200">
  <div class="card-body p-4">
    <h5 class="card-title text-sm font-medium text-base-content/70 pb-2 border-b">
      <%= t('.procurement_costs') %>
    </h5>
    <div class="overflow-x-auto mt-2">
      <table class="table table-xs">
        <thead>
          <tr class="text-xs font-medium text-base-content/70 bg-base-200/50">
            <th class="rounded-l-md"><%= t('.cost_type') %></th>
            <th class="text-right rounded-r-md"><%= t('.amount') %></th>
          </tr>
        </thead>
        <tbody class="font-medium text-base-content">
          <tr class="hover:bg-base-200/30">
            <td><%= t('.purchase_price') %></td>
            <td class="text-right text-error">
              <%= format_jpy_currency(order.procurement.purchase_price) %>
            </td>
          </tr>
          <%= render 'sales_reports/modal/components/procurement_fee_row',
                     label: t('.forwarding_fee'),
                     amount: order.procurement.forwarding_fee if order.procurement.forwarding_fee.present? && order.procurement.forwarding_fee > 0 %>
          <%= render 'sales_reports/modal/components/procurement_fee_row',
                     label: t('.option_fee'),
                     amount: order.procurement.option_fee if order.procurement.option_fee.present? && order.procurement.option_fee > 0 %>
          <%= render 'sales_reports/modal/components/procurement_fee_row',
                     label: t('.handling_fee'),
                     amount: order.procurement.handling_fee if order.procurement.handling_fee.present? && order.procurement.handling_fee > 0 %>
        </tbody>
        <tfoot>
          <tr class="font-bold text-base-content border-t">
            <td><%= t('.total_procurement') %></td>
            <td class="text-right text-error">
              <%= format_jpy_currency(order.procurement.total_cost) %>
            </td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>
