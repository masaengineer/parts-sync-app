<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<%# 次へボタン用のパーシャル %>
<% content = content_tag(:button,
  raw('<iconify-icon icon="lucide:chevron-right" height="16"></iconify-icon>'),
  class: "btn join-item btn-sm gap-2",
  "aria-label": "pagination-next",
  disabled: current_page.last?
) %>

<%= link_to_unless current_page.last?, content, url, remote: remote, rel: "next" %>
