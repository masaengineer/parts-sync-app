<%# app/views/expenses/index.html.erb %>
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold"><%= @year %>年<%= @month %>月の販管費一覧</h1>
    <div class="flex space-x-2">
      <%= link_to "新規登録", new_monthly_reports_expense_path(year: @year, month: @month), class: "btn btn-primary" %>
      <%= link_to "月次レポートに戻る", monthly_reports_path(year: @year), class: "btn btn-outline" %>
    </div>
  </div>

  <div class="card card-bordered bg-base-100 shadow-sm">
    <div class="card-body">
      <%= render 'month_navigation', year: @year, month: @month %>

      <% if expenses_exist?(@expenses) %>
        <%= render 'expenses_table', expenses: @expenses %>
      <% else %>
        <%= render 'no_expenses_message' %>
      <% end %>
    </div>
  </div>
</div>
