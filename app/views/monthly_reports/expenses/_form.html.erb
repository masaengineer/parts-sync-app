<%# app/views/monthly_reports/expenses/_form.html.erb %>
<%= form_with(model: [:monthly_reports, expense], class: "space-y-5 w-full") do |form| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
    <div class="form-control w-full">
      <%= form.label :year, "年", class: "label font-medium px-0 py-1" %>
      <%= form.number_field :year, class: "input input-bordered input-sm h-9 w-full #{'input-error' if expense.errors[:year].any?}", min: 2000, max: 2100 %>
      <% if expense.errors[:year].any? %>
        <div class="text-error text-sm mt-1"><%= expense.errors[:year].join(', ') %></div>
      <% end %>
    </div>

    <div class="form-control w-full">
      <%= form.label :month, "月", class: "label font-medium px-0 py-1" %>
      <%= form.number_field :month, class: "input input-bordered input-sm h-9 w-full #{'input-error' if expense.errors[:month].any?}", min: 1, max: 12 %>
      <% if expense.errors[:month].any? %>
        <div class="text-error text-sm mt-1"><%= expense.errors[:month].join(', ') %></div>
      <% end %>
    </div>
  </div>

  <div class="form-control w-full">
    <%= form.label :item_name, "項目名", class: "label font-medium px-0 py-1" %>
    <%= form.text_field :item_name, class: "input input-bordered input-sm h-9 w-full #{'input-error' if expense.errors[:item_name].any?}", placeholder: "例: 出品外注費用など" %>
    <% if expense.errors[:item_name].any? %>
      <div class="text-error text-sm mt-1"><%= expense.errors[:item_name].join(', ') %></div>
    <% end %>
  </div>

  <div class="form-control w-full">
    <%= form.label :amount, "金額", class: "label font-medium px-0 py-1" %>
    <div class="relative w-full">
      <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-500">¥</span>
      <%= form.number_field :amount, class: "input input-bordered input-sm h-9 w-full pl-8 #{'input-error' if expense.errors[:amount].any?}", min: 0, step: 1 %>
    </div>
    <% if expense.errors[:amount].any? %>
      <div class="text-error text-sm mt-1"><%= expense.errors[:amount].join(', ') %></div>
    <% end %>
  </div>

  <div class="mt-6 flex justify-center">
    <%= form.submit "保存", class: "btn btn-primary btn-sm min-w-[100px]" %>
  </div>
<% end %>
