<%# app/views/expenses/_month_navigation.html.erb %>
<div class="flex justify-between items-center mb-4">
  <div class="flex flex-wrap gap-1">
    <% (1..12).each do |m| %>
      <%= link_to m.to_s, monthly_reports_expenses_path(year: year, month: m),
          class: month_button_class(month, m) %>
    <% end %>
  </div>
  <div class="flex gap-1">
    <%= link_to "前年", monthly_reports_expenses_path(year: year - 1, month: month), class: "btn btn-sm btn-outline" %>
    <%= link_to "次年", monthly_reports_expenses_path(year: year + 1, month: month), class: "btn btn-sm btn-outline" %>
  </div>
</div>
