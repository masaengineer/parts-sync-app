  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">販管費の編集</h1>
    <%= link_to "一覧に戻る", monthly_reports_expenses_path(year: @expense.year, month: @expense.month), class: "btn btn-outline" %>
  </div>

  <div class="card card-bordered bg-base-100 shadow-sm">
    <div class="card-body">
      <%= render "form", expense: @expense %>
    </div>
  </div>
</div>
