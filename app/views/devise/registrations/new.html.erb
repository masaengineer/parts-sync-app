<% content_for :title, t('devise.registrations.new.title') %>

<div class="grid min-h-screen grid-cols-12 overflow-auto">
  <!--  Start: Register Side Image Panel -->
  <div class="relative hidden bg-[#FFE9D1] dark:bg-[#14181c] lg:col-span-7 lg:block xl:col-span-8 2xl:col-span-9">
    <div class="absolute inset-0 flex items-center justify-center">
      <%= image_tag 'auth/auth-hero.png', alt: 'Auth Image', loading: 'lazy', class: 'object-cover w-full h-full' %>
    </div>
    <div class="animate-bounce-2 absolute bottom-[15%] right-[20%]">
      <div aria-label="Card" class="card card-bordered w-64 bg-base-100/80 backdrop-blur-lg">
        <div class="card-body p-6">
          <div class="flex flex-col items-center justify-center">
            <%= image_tag 'landing/testimonial-pouya-avatar.png', alt: '', loading: 'lazy', class: 'mask mask-squircle bg-base-content/10 p-0.5 w-11 h-11' %>
            <div class="mt-2 flex items-center justify-center gap-0.5">
              <iconify-icon icon="lucide:star" class="text-orange-400 w-3 h-3"></iconify-icon>
              <iconify-icon icon="lucide:star" class="text-orange-400 w-3 h-3"></iconify-icon>
              <iconify-icon icon="lucide:star" class="text-orange-400 w-3 h-3"></iconify-icon>
              <iconify-icon icon="lucide:star" class="text-orange-400 w-3 h-3"></iconify-icon>
              <iconify-icon icon="lucide:star" class="text-orange-400 w-3 h-3"></iconify-icon>
            </div>
            <p class="mt-2 text-sm font-medium">Pouya Saadeghi</p>
            <p class="text-xs text-base-content/70">Creator of daisyUI</p>
          </div>
          <p class="text-center text-sm text-base-content/90">
            This is the ultimate admin dashboard for any React project
          </p>
        </div>
      </div>
    </div>
  </div>
  <!--  End: Register Side Image Panel -->

  <div class="col-span-12 lg:col-span-5 xl:col-span-4 2xl:col-span-3">
    <div class="flex flex-col items-stretch p-8 lg:p-16">
      <div class="flex items-center justify-between">
        <!--  Start: Logo -->
        <div class="inline">
          <%= image_tag 'logo/parts-sync-logo.svg', alt: 'Parts Sync', loading: 'lazy', class: 'hidden dark:inline h-12 w-auto' %>
          <%= image_tag 'logo/parts-sync-logo.svg', alt: 'Parts Sync', loading: 'lazy', class: 'inline dark:hidden h-12 w-auto' %>
        </div>
        <!--  End: Logo -->
      </div>

      <h3 class="mt-8 text-center text-xl font-semibold md:mt-12 lg:mt-24">
        <%= t('devise.registrations.new.sign_up') %>
      </h3>
      <h3 class="mt-2 text-center text-sm text-base-content/70">
        <%= t('devise.registrations.new.welcome_message') %>
      </h3>

      <div class="mt-6 md:mt-10">
        <% if resource.errors.any? %>
          <div class="alert alert-error mb-4">
            <ul class="list-disc pl-5">
              <% resource.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= link_to user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, class: "btn btn-outline w-full" do %>
          <%= image_tag "brand-logo/google-mini.svg", alt: "Google", class: "size-5" %>
          <span class="ml-2">Googleで登録</span>
        <% end %>

        <div class="divider">または</div>

        <!--  Start: Register Form -->
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="grid grid-cols-2 gap-3">
            <div class="form-control">
              <%= f.label :last_name, t('activerecord.attributes.user.last_name'), class: "label" %>
              <div class="form-control flex flex-row items-center rounded-box border border-base-content/20 ps-3">
                <iconify-icon icon="lucide:user" class="text-base-content/80 w-4 h-4"></iconify-icon>
                <%= f.text_field :last_name,
                    placeholder: t('activerecord.attributes.user.last_name'),
                    class: "input input-sm w-full transition-all focus:border-transparent focus:outline-0 focus:outline-offset-0" %>
              </div>
            </div>

            <div class="form-control">
              <%= f.label :first_name, t('activerecord.attributes.user.first_name'), class: "label" %>
              <div class="form-control flex flex-row items-center rounded-box border border-base-content/20 ps-3">
                <iconify-icon icon="lucide:user" class="text-base-content/80 w-4 h-4"></iconify-icon>
                <%= f.text_field :first_name,
                    placeholder: t('activerecord.attributes.user.first_name'),
                    class: "input input-sm w-full transition-all focus:border-transparent focus:outline-0 focus:outline-offset-0" %>
              </div>
            </div>
          </div>

          <div class="form-control mt-3">
            <%= f.label :email, t('activerecord.attributes.user.email'), class: "label" %>
            <div class="form-control flex flex-row items-center rounded-box border border-base-content/20 ps-3">
              <iconify-icon icon="lucide:mail" class="text-base-content/80 w-4 h-4"></iconify-icon>
              <%= f.email_field :email,
                  placeholder: t('activerecord.attributes.user.email'),
                  class: "input input-sm w-full transition-all focus:border-transparent focus:outline-0 focus:outline-offset-0" %>
            </div>
          </div>

          <div class="form-control mt-3">
            <%= f.label :password, t('activerecord.attributes.user.password'), class: "label" %>
            <div class="form-control flex flex-row items-center rounded-box border border-base-content/20 pe-3 ps-3" data-controller="password-field">
              <iconify-icon icon="lucide:key-round" class="text-base-content/80 w-4 h-4"></iconify-icon>
              <%= f.password_field :password,
                  placeholder: t('activerecord.attributes.user.password'),
                  class: "input input-sm w-full transition-all focus:border-transparent focus:outline-0 focus:outline-offset-0",
                  data: { password_field_target: "field" } %>
              <button type="button"
                      data-password-field-target="toggle"
                      data-action="click->password-field#toggle"
                      aria-label="Show/Hide password"
                      class="group btn btn-circle btn-ghost btn-xs hover:bg-base-content/10">
                <iconify-icon icon="lucide:eye" class="inline text-base-content/80 w-4 h-4 group-data-[slot-value=show]:hidden"></iconify-icon>
                <iconify-icon icon="lucide:eye-off" class="inline text-base-content/80 w-4 h-4 group-data-[slot-value=hide]:hidden"></iconify-icon>
              </button>
            </div>
          </div>

          <div class="form-control mt-3">
            <%= f.label :password_confirmation, t('activerecord.attributes.user.password_confirmation'), class: "label" %>
            <div class="form-control flex flex-row items-center rounded-box border border-base-content/20 pe-3 ps-3" data-controller="password-field">
              <iconify-icon icon="lucide:key-round" class="text-base-content/80 w-4 h-4"></iconify-icon>
              <%= f.password_field :password_confirmation,
                  placeholder: t('activerecord.attributes.user.password_confirmation'),
                  class: "input input-sm w-full transition-all focus:border-transparent focus:outline-0 focus:outline-offset-0",
                  data: { password_field_target: "field" } %>
              <button type="button"
                      data-password-field-target="toggle"
                      data-action="click->password-field#toggle"
                      aria-label="Show/Hide password"
                      class="group btn btn-circle btn-ghost btn-xs hover:bg-base-content/10">
                <iconify-icon icon="lucide:eye" class="inline text-base-content/80 w-4 h-4 group-data-[slot-value=show]:hidden"></iconify-icon>
                <iconify-icon icon="lucide:eye-off" class="inline text-base-content/80 w-4 h-4 group-data-[slot-value=hide]:hidden"></iconify-icon>
              </button>
            </div>
          </div>

          <div class="mt-4 flex items-center gap-3 md:mt-6">
            <%= f.check_box :agreement, class: "checkbox-primary checkbox checkbox-xs" %>
            <%= f.label :agreement do %>
              <%= link_to "利用規約", terms_of_service_path, class: "text-primary hover:underline", target: "_blank" %>と<%= link_to "プライバシーポリシー", privacy_policy_path, class: "text-primary hover:underline", target: "_blank" %>に同意する
            <% end %>
          </div>

          <div class="mt-4 md:mt-6">
            <%= f.submit t('devise.registrations.new.sign_up'),
                class: "btn btn-primary btn-block gap-2 text-base" %>
          </div>
        <% end %>
        <!--  End: Register Form -->

        <p class="mt-4 text-center text-sm text-base-content/80 md:mt-6">
          <%= t('devise.registrations.new.have_account') %>
          <%= link_to t('devise.shared.links.sign_in'),
              new_session_path(resource_name),
              class: "text-primary hover:underline" %>
        </p>
      </div>
    </div>
  </div>
</div>
