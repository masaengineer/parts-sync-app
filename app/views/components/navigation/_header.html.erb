<header class="fixed top-0 left-0 right-0 z-50 bg-base-100/95 backdrop-blur-lg">
  <div class="container mx-auto">
    <div class="navbar">
      <%# ロゴ部分 %>
      <div class="navbar-start">
        <%= link_to root_path, class: "flex items-center gap-2" do %>
          <%= image_tag "logo/logo-dark.svg", alt: "logo-dark", class: "hidden h-8 dark:inline" %>
          <%= image_tag "logo/logo-light.svg", alt: "logo-light", class: "inline h-8 dark:hidden" %>
        <% end %>
      </div>

      <%# 中央部分 %>
      <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1 text-base">
          <%= render "components/navigation/header_nav_items" %>
        </ul>
      </div>

      <%# 右側部分 %>
      <div class="navbar-end gap-2">
        <%# ダークモードトグル %>
        <button
          data-action="theme-toggle"
          class="btn btn-circle btn-ghost btn-sm">
          <i class="fa-regular fa-sun hidden dark:inline"></i>
          <i class="fa-regular fa-moon inline dark:hidden"></i>
        </button>

        <%# ログイン状態による表示切り替え %>
        <% if user_signed_in? %>
          <%= render "components/navigation/header_user_menu" %>
        <% else %>
          <%= render "shared/auth_buttons" %>
        <% end %>
      </div>
    </div>
  </div>
</header>
